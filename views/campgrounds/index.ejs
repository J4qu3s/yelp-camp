<% layout('layouts/boilerplate') %>

<h1>Welcome to yelp campground - all campgrounds</h1>

<% for(let campground of campgrounds){ %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= campground.image %>" alt="" class="img-fluid">

            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title %></h5>
                    <p class="card-text"><%= campground.description %></p>
                    <p class="card-text"><small class="text-muted"><%= campground.location %></small></p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Camp Details</a>
                </div>
            </div>
        </div>
    </div>
<% } %>
<ul>
    <% campgrounds.forEach((e) => { %>
        <li><%= e.title %> - <a href="/campgrounds/<%= e._id %>">Show campground</a> - <a href="/campgrounds/<%= e._id %>/edit">Edit</a></li>
    <% }) %>
</ul>